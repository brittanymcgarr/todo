<p style="color: green"><%= notice %></p>

<div id="tasks-title">
  <h1>Tasks</h1>
</div>

<div id="tasks">
  <div id="todo">
    <h1>To Do:</h1>
    <% @pending_tasks.each do |task| %>
      <% if task.active %>
        <%= render task %>
        <p>
          <%= button_to "Complete", complete_task_path(task), method: :post %>
        </p>
        <p>
          <%= link_to "Show this task", task %>
        </p>
      <% end %>
    <% end %>
  </div>

  <div id="completed">
    <h1>Complete Tasks</h1>
    <% @complete_tasks.each do |task| %>
      <% if task.active %>
        <%= render task %>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to "New task", new_task_path %>
