<p style="color: green"><%= notice %></p>

<div id="tasks-title">
  <h1>Your Very Own To-Do List</h1>
</div>


<div id="tasks">
  <div id="todo">
    <h1>To Do:</h1>
    <% @pending_tasks.each do |task| %>
      <% if task.active %>
        <%= render task %>
      <% end %>
    <% end %>
  </div>

  <div id="completed">
    <h1>Complete Tasks</h1>
    <% @complete_tasks.each do |task| %>
      <% if task.active %>
        <%= render task %>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to "New task", new_task_path %>
