<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <h1>To Do:</h1>
  <% @pending_tasks.each do |task| %>
    <% if task.active %>
      <%= render task %>
      <p>
        <%= link_to "Show this task", task %>
      </p>
    <% end %>
  <% end %>

  <h1>Complete Tasks</h1>
  <% @complete_tasks.each do |task| %>
    <% if task.active %>
        <%= render task %>
    <% end %>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
